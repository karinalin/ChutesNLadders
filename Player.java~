 * Player.java
 */

public class Player {
  
  //instance variables
  //general info
  String name;
  String token;
  
  //stats
  int numTurns;
  int numChutes;
  int numLadders;
  int totalMovement;
  int position;
  
  
  
  public Player(String name, String token) {
    this.name = name;
    this.token = token;
    position = 0;
  }
  
  public int getPosition() {
    return position;
  }
  
  public void setPosition(int destination) {
    this.position = destination;
    
  }
  
}